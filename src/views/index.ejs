<html>
  <head>
    <title> bria </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <style>
      body {
        margin: 15px;
        white-space: nowrap;
      }

      @import url("https://fonts.googleapis.com/css2?family=Kalam");
      .navbar-brand {
        font-family: "Kalam", cursive;
        font-size: 30px;
      }

      span {
        font-family: "Kalam", cursive;
        display: block;
        text-align: center;
      }

      .row {
        align-items: center;
      }

      .form-select {
        width: 30%;
      }

      .form-control {
        width: 30%;
        height: 40px;
      }

      img {
        border-radius: 10px;
      }

      #search-section {
        display: flex;
      }

      .item-box {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        width: 200px;
        height: 200px;
        background-color: grey;
        border-radius: 10px;
        padding: 10px;
        margin: 10px;
      }

      .item-box img {
        width: 100%;
        height: 70%;
        background-size: cover;
        background-position: center;
      }
      
      .item-box .product-name {
        display: block;
        text-align: center;
        margin-top: 10px;
      }
    </style>
  </head>

  <body data-bs-theme="dark">
    <nav class="navbar navbar-expand-sm">
      <h1 class="navbar-brand" href="/"> bria </h1>

      <ul class="navbar-nav ms-auto">
        <li>
          <a class="nav-link" href="/"> Home </a>
        </li>
        <li>
          <a class="nav-link" href="/cart"> View Cart </a>
        </li>
        <li>
          <a class="nav-link" href="#"> Contact Us </a>
        </li>
      </ul>
    </nav>

    <br>

    <div id="search-section">
      <input class="form-control rounded" type="text" placeholder="üîé  Search for an Item">
      <h2> &nbsp; or, </h2>
    </div>
    
    <br>

    <select name="categories" class="form-select">
      <option selected hidden> üìã Select a Category </option>
      <option> üçñ Food </option>
      <option> ü¶¥ Supplies </option>
      <option> üõèÔ∏è Furniture </option>
      <option> üíä Health </option>
      <option> üëó Accessories </option>
      <option> üöø Grooming </option>
    </select>

    <br>

    <% categories.forEach((category) => { %>
      <div class="row">
        <h2> <%= category.category %> </h2>
        <% category.items.forEach((item) => { %>
          <div class="item-box" onclick="insertData('<%= item.name %>', '<%= item.price %>', '<%= item.category %>', '<%= item.image %>')">
            <img src="<%= item.image %>" alt="Product Image">
            <span class="product-name"> <%= item.name %> </span>
            <span> ‚Ç±<%= item.price %> </span>
          </div>
        <% }) %>
      </div>
    <% }) %>
    
    <script>
      function insertData(itemName, itemPrice, itemCategory, itemImage) {
        $.ajax({
          url: '/insert-data',
          type: 'POST',
          data: {
            name: itemName,
            price: itemPrice,
            category: itemCategory,
            image: itemImage
          },
          success: function(response) {
            alert(response)
            document.location.reload()
          }
        })
      }
    </script>
    
  </body>
</html>